      var trax = {};
      var hl = null;
      $(document).ready(function(){
        hl = new HisaishiPlayer({
          source: '/queue.jsonp',
          socket: 'ws://' + document.location.host + '/socket',
          hsParams: {
            preroll: {
              line: 1000,
              word: 200
            }
          },
          containers: {
            display: '#hisaishi-display',
            list:  '#hisaishi-list'
          },
          countdown: 30
        });

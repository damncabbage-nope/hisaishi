!!! 5
%html
  %head
    %title= "Karaoke Admin: Song List"
    %link{:rel => "stylesheet", :type => "text/css", :href => "/hisaishi-style.css?1"}
  %body{:id => "hisaishi-admin--list"}
    %h1= "Karaoke Admin: Song List"
    %a{:href => "/admin/add"}= "Add a new song"
    %table{:id => "hisaishi-all-songs"}
      %thead
        %tr
          %th= "No"
          %th= "Title"
          %th= "Artist"
          %th= "Series"
          %th= "Karaoke?"
          %th= "Lyrics?"
          %th= "Actions!"
      %tbody
      - songs.each do |song|
        %tr
          %td
            %a{:href => "/song/#{song.id}"} #{song.id}
          %td= song.title
          %td= song.artist
          %td= song.origin_title
          %td= (song.karaoke == :true ? "Karaoke" : (song.karaoke == :false ? "With Vocals" : "???"))
          %td= song.lyrics_exists ? "Yes" : "No Lyrics"
          %td
            %a{:href => "/admin/edit/#{song.id}"}= "Edit"
            %a{:href => "/admin/lyrics/#{song.id}"}= "Lyrics"
            %a{:href => "/admin/delete/#{song.id}"}= "Delete?"
    %a{:href => "/admin/add"}= "Add a new song"

!!! 5
%html
	%head
		%title= "Delete announcement?"
		= haml :_head
	%body{:id => "hisaishi-announce-delete"}
		#home{"data-role" => "page"}
			%div{"data-role" => "header", "data-theme" => "e"}
				%h1= "Delete announcement from queue?"
			%div{"data-role" => "content", "data-theme" => "d"}
				%form{:action => "/announce-delete-process", :method => "post", "data-ajax" => "false"}
					%input{:type => "hidden", :name => "a_id", :id => "a_id", :value => ann.id}
					%p
						= "Would you like to delete "
						%em= ann.text
						= " from the announcement queue?"
					%button{:type => "submit", "data-role" => "button", "data-theme" => "b"}= "Delete"
					%a{:href => "queue", "data-role" => "button", "data-rel" => "back"}= "Cancel and return to announcements"

!!! 5
%html
	%head
		%title= "Karaoke Queue"
		= haml :_head
	%body{:id => "hisaishi-song-list"}
		#home{"data-role" => "page", "data-add-back-btn" => "true"}
			%div{"data-role" => "header"}
				%h1= "Add to Queue?"
				= haml :_lock_button
			%div{"data-role" => "content"}
				%form{:action => "/add-submit", :method => "POST"}
					%input{:type => "hidden", :name => "song_id", :value => song.id}
					%p
						= "Do you want to add "
						%em= song.title
						= " to the end of the queue?"
					%div{"data-role" => "fieldcontain" }
						%label{:for => "requester"}= "Nickname of singer:"
						%input{:name => "requester", :id => "requester"}
					%button{:type => "submit"}= "Add to Queue"
